{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "body-max-line-length": [
      2,
      "always",
      100
    ],
    "scope-enum": [
      2,
      "always",
      [
        "",
        "directive",
        "core",
        "demo",
        "ci-cd"
      ]
    ],
    "type-enum": [
      2,
      "always",
      [
        "build",
        "ci",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "test",
        "demo-app",
        "chore"
      ]
    ]
  }
}
